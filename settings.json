{
  // Editor settings ============================
  "editor.fontSize": 18,
  "editor.lineHeight": 30,
  "editor.cursorBlinking": "expand",
  "editor.wordWrap": "on",
  "editor.tabSize": 2,
  "editor.linkedEditing": true,
  "editor.fontLigatures": true,
  "editor.fontFamily": "'Fira Code', Consolas, 'Courier New', monospace",
  "editor.allowVariableFontsInAccessibilityMode": true,
  "editor.formatOnSave": true,
  "editor.formatOnType": true,
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.mouseWheelZoom": true,

  // Workbench settings ============================
  "breadcrumbs.enabled": false,
  "window.menuBarVisibility": "compact",

  // Files settings ============================
  "files.autoSave": "afterDelay",
  "files.autoSaveDelay": 500,
  "files.exclude": {
    "**/.DS_Store": true,
    "**/node_modules": true,
    "**/dist": true
  },

  // Terminal settings ============================
  "terminal.integrated.fontSize": 17,
  "terminal.integrated.fontFamily": "monospace",
  "terminal.integrated.fontLigatures.enabled": true,
  "terminal.integrated.cursorBlinking": true,
  "terminal.integrated.copyOnSelection": true,
  "terminal.integrated.lineHeight": 1.2,
  "terminal.integrated.defaultProfile.windows": "Git Bash",
  "terminal.integrated.profiles.osx": {
    "PowerShell": {
      "path": "pwsh"
    }
  },
  "terminal.integrated.defaultProfile.osx": "PowerShell",

  // Extensions settings ============================
  "git.autofetch": true,
  "git.alwaysSignOff": true,
  "liveServer.settings.CustomBrowser": "chrome",

  // Tailwind CSS IntelliSense settings ============================
  "tailwindCSS.includeLanguages": {
    "javascript": "javascript",
    "javascriptreact": "javascriptreact",
    "typescript": "typescript",
    "typescriptreact": "typescriptreact"
  },
  "tailwindCSS.emmetCompletions": true,
  "tailwindCSS.experimental.classRegex": ["tw`([^`]*)", "cn\\(([^)]*)\\)"],

  // Markdown Preview Enhanced settings ============================
  "markdown-preview-enhanced.codeBlockTheme": "github-dark.css",
  "markdown-preview-enhanced.enableExtendedTableSyntax": true,
  "markdown-preview-enhanced.enableHTML5Embed": true,
  "markdown-preview-enhanced.frontMatterRenderingOption": "code block",
  "markdown-preview-enhanced.automaticallyShowPreviewOfMarkdownBeingEdited": true,
  "markdown-preview-enhanced.alwaysShowBacklinksInPreview": true,

  "settingsSync.ignoredExtensions": ["ritwickdey.live-sass"],

  // Explorer settings ============================
  "explorer.confirmDelete": false,
  "security.workspace.trust.untrustedFiles": "open",

  // JavaScript/TypeScript settings ============================
  "eslint.enable": true,
  "eslint.validate": [
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact"
  ],
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "explicit"
  },

  "debug.javascript.autoAttach": "on",

  // Prettier settings ============================
  "prettier.singleQuote": true,
  "prettier.jsxSingleQuote": true,

  // Theme & Icons settings ============================
  "workbench.iconTheme": "symbols",
  "workbench.productIconTheme": "fluent-icons",
  "workbench.colorTheme": "Dark Magic Frankenstein",

  // Note: Theme customization details are located in this section.
  // The visual setup is tailored for the "Dark Magic Theme" by David Moris â€” a beautiful theme that I've tweaked for my comfort.
  // Feel free to use it as-is or customize it to suit your preferences.
  // All color and icon adjustments are optimized for this theme, but the same approach can be adapted to other free dark themes.

  "workbench.colorCustomizations": {
    "editorGroupHeader.tabsBackground": "#171e1f",
    "editorGroupHeader.border": "#024032",
    "tab.activeBackground": "#024032",
    "tab.inactiveBackground": "#0f1715",
    "tab.activeForeground": "#66eeaa",
    "minimap.background": "#171e1f",
    "minimapSlider.background": "#04b85e49",
    "minimapSlider.hoverBackground": "#04b85e41",
    "minimapSlider.activeBackground": "#04b85e34",
    "activityBar.background": "#0f1715",
    "terminal.border": "#024032",
    "sideBar.background": "#171e1f",
    "sideBar.border": "#024032",
    "statusBar.background": "#024032",
    "terminal.ansiGreen": "#66eeaa",
    "terminal.ansiMagenta": "#4a09e2",
    "scrollbarSlider.background": "#024032",
    "scrollbarSlider.hoverBackground": "#66eeaa",
    "scrollbarSlider.activeBackground": "#66eeaa",
    "menu.background": "#024032",
    "menubar.selectionForeground": "#66eeaa",
    "menubar.selectionBackground": "#024032",
    "menu.selectionBackground": "#06a27e62",
    "menu.selectionForeground": "#66eeaa",
    "editor.selectionBackground": "#024032",
    "editor.selectionHighlightBackground": "#0240329d",
    "editor.findMatchBackground": "#024032",
    "editor.findMatchHighlightBackground": "#0240329d",
    "toolbar.activeBackground": "#024032",
    "toolbar.hoverBackground": "#024032",
    "terminal.selectionBackground": "#024032",
    "terminal.hoverHighlightBackground": "#66eeaa",
    "terminalCursor.foreground": "#66eeaa"
  },
  "editor.tokenColorCustomizations": {
    "comments": {
      "foreground": "#9eb8ab",
      "fontStyle": "italic underline"
    }
  },

  // MongoDB Extension Settings ============================
  "mongodb.connectionString": "mongodb://localhost:27017",
  "mongodb.defaultDatabase": "mernapp", // Default database to connect to
  "mongodb.defaultCollection": "users", // Default collection to use
  "mongodb.showExplorer": true, // Enable MongoDB sidebar
  "mongodb.showConnectDialogOnStartup": false, // Skip connect prompt on startup
  "mongodb.useDefaultShell": true // Use mongosh for shell commands
}
